{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r backend/requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn --chdir backend -w 1 -b 0.0.0.0:$PORT app:app",
    "restartPolicyType": "ON_FAILURE"
  }
}
